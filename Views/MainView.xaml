<UserControl
    x:Class="MSFSGraphicsPresetSwitcher.Views.MainView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MSFSGraphicsPresetSwitcher.ViewModels"
    Padding="20">

    <ScrollViewer>
        <StackPanel Spacing="4">

            <!-- HEADER -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">

                <StackPanel Spacing="6">
                    <TextBlock
                        Text="MSFS Graphics Preset Switcher"
                        FontSize="22"
                        FontWeight="SemiBold"/>

                    <TextBlock
                        Text="Save and quickly switch between Microsoft Flight Simulator graphics presets."
                        Opacity="0.7"
                        TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- PATHS CARD -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">

                <StackPanel Spacing="12">

                    <TextBlock
                        Text="Configuration paths"
                        FontSize="16"
                        FontWeight="SemiBold"/>

                    <Grid ColumnSpacing="8" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Live config" VerticalAlignment="Center"/>
                        <TextBox
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.LiveFilePath, Mode=OneWay}"
                            IsReadOnly="True"/>
                        <Button
                            Grid.Column="2"
                            Content="Browse"
                            Command="{x:Bind ViewModel.BrowseLiveFileCommand}"/>

                        <TextBlock Grid.Row="1" Text="Presets folder" VerticalAlignment="Center"/>
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{x:Bind ViewModel.PresetFolderPath, Mode=OneWay}"
                            IsReadOnly="True"/>
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Content="Browse"
                            Command="{x:Bind ViewModel.BrowsePresetFolderCommand}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- PRESETS CARD -->
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">

                <StackPanel Spacing="12">

                    <TextBlock
                        Text="Presets"
                        FontSize="16"
                        FontWeight="SemiBold"/>

                    <!-- Save preset -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox
                            Width="400"
                            PlaceholderText="Enter the desired preset name - e.g. VR, Ultra, Triples etc."
                            Text="{x:Bind ViewModel.NewPresetName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button
                            Width="80"
                            Content="Save"
                            Style="{ThemeResource AccentButtonStyle}"
                            Command="{x:Bind ViewModel.SavePresetCommand}"/>
                    </StackPanel>

                    <!-- List + activate -->
                    <Grid ColumnSpacing="12" Margin="-4,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="404"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Presets List -->
                        <ListView
                            Height="160"
                            ItemsSource="{x:Bind ViewModel.Presets}"
                            SelectedItem="{x:Bind ViewModel.SelectedPreset, Mode=TwoWay}">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="10" Padding="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Text="{Binding Name}"
                                            VerticalAlignment="Center"/>    
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Buttons stacked vertically, centered relative to ListView -->
                        <StackPanel
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="8"
                            Margin="-4,0,0,0"
                            VerticalAlignment="Center">

                            <Button
                                Width="80"
                                Content="Activate"
                                Style="{ThemeResource AccentButtonStyle}"
                                Command="{x:Bind ViewModel.ActivatePresetCommand}"/>

                            <Button
                                Width="80"
                                Content="Delete"
                                Style="{ThemeResource SubtleButtonStyle}"
                                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                Command="{x:Bind ViewModel.RemovePresetCommand}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- STATUS -->
            <TextBlock
                Margin="0,12,0,0"
                HorizontalAlignment="Center"
                FontWeight="SemiBold"
                Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                Opacity="{x:Bind ViewModel.StatusOpacity, Mode=OneWay}"
                Foreground="{x:Bind ViewModel.StatusBrush, Mode=OneWay}"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
